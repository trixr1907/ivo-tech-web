{
  "extends": "../../packages/config/tsconfig/base.json",
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react",
    "moduleResolution": "node",
    "outDir": "dist",
    "declarationDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
